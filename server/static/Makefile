.EXPORT_ALL_VARIABLES:
APP_NAME=cloud-jeopardy-api
ENV=prd
AWS_PROFILE=prd-non-tf-905234897161
AWS_ACCOUNT_ID=905234897161
AWS_REGION=us-east-1

# Local app

## Create virtual environment
venv:
	python3 -m venv venv
	source venv/bin/activate ; pip install --upgrade pip ; python3 -m pip install -r requirements-dev.txt
	source venv/bin/activate ; pip freeze > requirements_freeze.txt

## Clean virtual environment
clean:
	rm -rf venv

## Run static file generator
static-file-generator:
	source venv/bin/activate ; PYTHONPATH='./app' python -m static_file_generator

## Run unit tests
test:
	source venv/bin/activate ; PYTHONPATH='./app' pytest -vvv -s

## Run black code formatter
black:
	source venv/bin/activate ; black  --line-length 120 .

## Run flake8 linter
flake8:
	source venv/bin/activate ; flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
	source venv/bin/activate ; flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics


# AWS Command Tools

## AWS S3 cp static_files to S3
s3-deploy-server:
	aws s3 cp .generated_files s3://${ENV}-s3-${APP_NAME} --recursive --profile ${AWS_PROFILE}

## AWS S3 rm static_files from S3
s3-delete-server:
	aws s3 rm s3://${ENV}-s3-${APP_NAME} --recursive

## Browse to public S3 url
s3-browse:
	open http://${ENV}-s3-${APP_NAME}.s3-website-${AWS_REGION}.amazonaws.com/


# Terraform

## TF init
tf-init:
	cd infra/s3; terraform init -var-file=variables.tfvars; cd -

## TF validate
tf-validate:
	cd infra/s3; terraform validate; cd -

## TF plan
tf-plan:
	cd infra/s3; terraform plan -var-file=variables.tfvars; cd -

## TF apply
tf-apply: tf-plan
	cd infra/s3; terraform apply -var-file=variables.tfvars -auto-approve; cd -

## TF destroy
tf-destroy:
	cd infra/s3; terraform destroy -var-file=variables.tfvars -auto-approve; cd -


#################################################################################
# Self Documenting Commands                                                     #
#################################################################################

.DEFAULT_GOAL := help

# Inspired by <http://marmelab.com/blog/2016/02/29/auto-documented-makefile.html>
# sed script explained:
# /^##/:
# 	* save line in hold space
# 	* purge line
# 	* Loop:
# 		* append newline + line to hold space
# 		* go to next line
# 		* if line starts with doc comment, strip comment character off and loop
# 	* remove target prerequisites
# 	* append hold space (+ newline) to line
# 	* replace newline plus comments by `---`
# 	* print line
# Separate expressions are necessary because labels cannot be delimited by
# semicolon; see <http://stackoverflow.com/a/11799865/1968>
.PHONY: help
help:
	@sed -n -e "/^## / { \
		h; \
		s/.*//; \
		:doc" \
		-e "H; \
		n; \
		s/^## //; \
		t doc" \
		-e "s/:.*//; \
		G; \
		s/\\n## /---/; \
		s/\\n/ /g; \
		p; \
	}" ${MAKEFILE_LIST} \
	| LC_ALL='C' sort --ignore-case \
	| awk -F '---' \
		-v ncol=$$(tput cols) \
		-v indent=19 \
		-v col_on="$$(tput setaf 6)" \
		-v col_off="$$(tput sgr0)" \
	'{ \
		printf "%s%*s%s ", col_on, -indent, $$1, col_off; \
		n = split($$2, words, " "); \
		line_length = ncol - indent; \
		for (i = 1; i <= n; i++) { \
			line_length -= length(words[i]) + 1; \
			if (line_length <= 0) { \
				line_length = ncol - indent - length(words[i]) - 1; \
				printf "\n%*s ", -indent, " "; \
			} \
			printf "%s ", words[i]; \
		} \
		printf "\n"; \
	}' \
	| more $(shell test $(shell uname) = Darwin && echo '--no-init --raw-control-chars')
